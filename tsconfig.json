{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "lib": ["es6"],
        "noImplicitAny": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "exclude": [
        "node_modules"
    ]
}
